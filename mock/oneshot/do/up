#!/bin/execlineb -P

# Define file paths
define global_env /etc/s6/env.d/00_environment
define group_env /etc/s6/env.d/10_%service_group_here%
define service_env /etc/s6/env.d/20_%service_name_here%

if { test -f ${global_env} } envfile ${global_env}
if { test -f ${group_env} } envfile ${group_env}
if { test -f ${service_env} } envfile ${service_env}

# Execute the command
%command_here%

